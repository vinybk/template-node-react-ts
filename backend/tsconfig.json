{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS", // Backend may require CommonJS for compatibility.
    "outDir": "./dist",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
