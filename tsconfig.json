{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "zod": ["node_modules/zod"],
        "@shared/*": ["./shared/*"]
      }
    },
    "include": [],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "./shared" },
      { "path": "./frontend" },
      { "path": "./backend" }
    ]
  }
  